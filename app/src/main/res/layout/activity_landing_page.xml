<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.LandingPage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image"
        android:layout_alignStart="@+id/card"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="-170dp"
        android:textColor="@color/textcolor"
        android:shadowColor="@color/cardfront"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="GRAND SOLO #4019"
        android:elevation="4dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:id="@+id/image"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/arena2" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="#000"
        android:id="@+id/card"
        android:alpha="0.8"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="170dp">


        <TextView
            android:id="@+id/dateNTime"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textFontWeight="20dp"
            android:textColor="@color/textcolor"
            android:text="Date: 2020-03-06 Time: 10:00 PM" />

        <TextView
            android:id="@+id/gameReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Details"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/textcolor"
            android:layout_marginStart="5dp"
            android:layout_marginTop="28dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="4dp"
            android:background="@color/textcolor"
            android:layout_marginTop="49dp"/>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="230dp"
        android:elevation="4dp">

        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="#fffff00">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient">

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="#fffff00"
            android:layout_marginStart="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient">

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="#fffff00"
            android:layout_marginStart="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient">

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="#fffff00"
            android:layout_marginStart="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient">

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="#fffff00"
            android:layout_marginStart="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient">

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>


</RelativeLayout>